<h1><%= @personnage.name %></h1>

<%= simple_form_for [@personnage, @reservation] do |f| %>
  <%= f.input :date %>
  <%= cl_image_tag @article.photo.key, height: 300, width: 400, crop: :fill %>
  <%= f.submit %>
<% end %>

<%= link_to "Delete personnage", personnage_path(@personnage), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %>
